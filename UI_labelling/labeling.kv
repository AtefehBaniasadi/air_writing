#:kivy 1.9.0

<Cursor>:
    size: 20, 20 
    rgba: (0, 0, 0, 1)
    canvas:
        Color:
            rgba: self.rgba
        Ellipse:
            pos: self.pos
            size: self.size          

<SliderEngine>:
    cursorStart: corsor_start
    cursorEnd: corsor_end
    rgba: (0, 0, 1, 1)
    rectangle_h: 5

    canvas:
        Color:
            rgba: self.rgba
        Rectangle:
            pos: self.offset_x, self.offset_y
            size: self.width - 2*self.offset_x, self.rectangle_h
        Color:
            rgba: .4, .4, 1, root.alpha
        SmoothLine:
            points: self.points
            joint: self.joint
            cap: self.cap
            width: self.linewidth
            close: self.close
        Color:
            rgba: 1, .4, 1, root.alpha
        SmoothLine:
            points: self.selectedPoints
            joint: self.joint
            cap: self.cap
            width: self.linewidth
            close: self.close

    Cursor:
        id: corsor_start
        pos: self.parent.center_x * 5 / 10, self.parent.center_y * 1 / 5 - 10

    Cursor:
        id: corsor_end
        pos: self.parent.center_x * 15 / 10, self.parent.center_y * 1 / 5 - 10


