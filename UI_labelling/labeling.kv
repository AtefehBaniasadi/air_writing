#:kivy 1.9.0

<Cursor>:
    size: 20, 20 
    rgba: (0, 1, 1, 1)
    canvas:
        Color:
            rgba: self.rgba
        Ellipse:
            pos: self.pos
            size: self.size          

<DrawingBoard>:
    canvas:
        Color:
            rgba: .4, .4, 1, root.alpha
        Point:
            points: self.points
            source: 'particle.png'
            pointsize: 5
        Color:
            rgba: 1, .4, 1, root.alpha
        Point:
            points: self.selectedPoints
            source: 'particle.png'
            pointsize: 5
    

<SliderEngine>:
    cursorStart: corsor_start
    cursorEnd: corsor_end
    board: draw_board
    rgba: (0, 0, 1, 1)
    rectangle_h: 5

    canvas:
        Color:
            rgba: self.rgba
        Rectangle:
            pos: self.offset_x, self.offset_y
            size: self.width - 2*self.offset_x, self.rectangle_h

    DrawingBoard:
        id: draw_board
        size_hint: (1, .7)
        pos_hint: {'x':0, 'y':.3}

    Cursor:
        id: corsor_start
        pos: self.parent.center_x * 5 / 10, self.parent.center_y * 1 / 5 - 30

    Cursor:
        id: corsor_end
        pos: self.parent.center_x * 15 / 10, self.parent.center_y * 1 / 5 - 30


<LabelEngine>:
    lastButton: last_button
    nextButton: next_button

    FloatLayout:

        SliderEngine:
            cursorStart: 
            cursorEnd: 
            size_hint: (1, .8)
            pos_hint: {'x':0, 'y':0}

        Button:
            id: last_button
            text: "Last"
            size_hint: (.5, .2)
            pos_hint: {'x':0, 'y':.8}
            background_color: (0, 1, 1, 1)

        Button:
            id: next_button
            text: "Next"
            size_hint: (.5, .2)
            pos_hint: {'x':.5, 'y':.8}
            background_color: (0, 1, 1, 1)
        