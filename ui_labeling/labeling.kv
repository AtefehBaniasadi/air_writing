#:kivy 1.8.0

<UserIDTextInput>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            font_size: '68sp'
            size_hint: 1, .5
            input_filter: 'int'
            multiline: False
            markup: True
            focus: True
            on_text_validate: root.on_enter(self.text)
        Label:
            text: "Note: It will take a while for first-time entry."
            text_size: root.width, None
            font_size: '16sp'
            size_hint: 1, .3
            halign: 'left'
            markup: True


<ContentWithButton>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.content_text
            text_size: root.width, None
            font_size: '32sp'
            size_hint: 1, .8
            halign: 'center'
            markup: True
        Button:
            text: root.button_text
            font_size: '32sp'
            on_release: root.exit()
            size_hint: 1, .2


<StartCursor>:
    size: 10, 20 
    rgb: 1, 1, 1
    canvas:
        Color:
            rgb: self.rgb
        Rectangle:
            pos: self.pos[0] , self.pos[1]
            size: self.size        

<EndCursor>:
    size: 10, 20 
    rgb: 1, 1, 1
    canvas:
        Color:
            rgb: self.rgb
        Rectangle:
            pos: self.pos[0] - self.size[0] / 2, self.pos[1]
            size: self.size         

<SlideBar>
    canvas:
        Color: 
            rgba: .6, .6, .6, .6
        Rectangle:
            size: self.width, self.height / 8
            pos: 0, self.y_offset

<DrawingBoard>:

<AppEngine>:
    lastButton: last_button
    nextButton: next_button
    board: drawing_board

    FloatLayout:
        SlideBar:
            id: slide_bar
            size_hint: (1, .1)
            pos_hint: {'x':0, 'y':0}

        DrawingBoard:
            id: drawing_board
            size_hint: (1, .8)
            pos_hint: {'x':0, 'y':.1}

        Button:
            id: last_button
            text: "Last"
            size_hint: (.5, .1)
            pos_hint: {'x':0, 'y':.9}
            background_color: (0, 1, 1, 1)

        Button:
            id: next_button
            text: "Next"
            size_hint: (.5, .1)
            pos_hint: {'x':.5, 'y':.9}
            background_color: (0, 1, 1, 1)

        Label:
            text: "[size=32]" + "No. " + root.word_idx + "   " + root.word + "[/size]"
            markup: True
            size_hint: (1, .1)
            pos_hint: {'x':0, 'y':.8}
            
        